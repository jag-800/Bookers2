<p id="notice">
  <%= flash[:notice] %>
</p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <!-- ユーザーの詳細 -->
      <h2>User info</h2>
      <div>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table">
          <thead>
            <tr>
              <th>name</th>
              <th>introduction</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @user.name %></td>
              <td><%= @user.introduction %></td>
            </tr>
          </tbody>
        </table>
        
        <div class="">
            <p>
             <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
                <i class="fas fa-user-cog"></i>
             <% end %>
            </p>
        </div>
      </div>
      
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @new_book do |f| %>
        <div class="form-group">
          <label>Title</label>
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
          <label>Opinion</label>
          <%= f.text_area :body, class:"form-control" %>
        </div>
        <%= f.submit 'Create Book', class:"btn btn-success" %>
      <% end %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2 class="mt-3">Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= image_tag @book.user.get_profile_image(100,100) %>
              <br><%= link_to @user.name, user_path(@user.id) %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success" %>
              <% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？",  class:"btn btn-danger" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
